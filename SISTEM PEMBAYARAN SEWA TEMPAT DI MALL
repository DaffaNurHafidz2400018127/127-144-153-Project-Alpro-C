            cout << "6. Reminder Pembayaran\n";
            cout << "7. Tinjau Laporan Pengguna\n";
            cout << "8. Cari Data Penyewa\n";
            cout << "9. Lihat Penyewa Belum Bayar Bulan Ini\n";
            cout << "0. Keluar\n";
            
        } else {
        	
            cout << "2. Bayar Sewa\n";
